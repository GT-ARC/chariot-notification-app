
<h4> Add worker request</h4>
<div class="form-group row">
	<label class="col-sm-2"><strong>Connection Establishment</strong></label>
	<input class="btn btn-primary mb-2" id="ConnectionButton" onclick="doOpenConnection()" value="Connect" type="button">
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>ID (Username):</strong></label>
	<input  class="form-control col-sm-6" id="id" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Password: </strong></label>
	<input  class="form-control col-sm-6" id="password" type="password" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Name: </strong></label>
	<input  class="form-control col-sm-6" id="name" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Surname: </strong></label>
	<input  class="form-control col-sm-6" id="surname" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Birthdate: </strong></label>
	<input type="date" class="form-control col-sm-6" id="birthdate" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Acquired Skills: </strong></label>
	<ul class="list-group card form-control col-sm-6" style="overflow-y:scroll; height:250px;">
		{{#skill}}
		<li class="list-group-item">
			<input type="checkbox" name="skill" value="{{Id}}"> <a href="skill?id={{Id}}">{{name}}</a></input>
		</li>
		{{/skill}}
	</ul>
</div>
<div class="form-group row">
	<div class="col-sm-2"></div>
	<button class="btn btn-primary mb-2" onclick="doSendMessage();">Execute</button>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>COMMUNICATION LOG</strong></label>
	<textarea id="txtAreaEcho" class="form-control col-sm-6" style="overflow:scroll; height:250px;"></textarea>
</div>

<script src="js/workerRequest.js" type="text/javascript"></script>