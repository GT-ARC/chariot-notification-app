
<h4> Task request</h4>
<div class="form-group row">
	<label class="col-sm-2"><strong>Connection Establishment</strong></label>
	<input class="btn btn-primary mb-2" id="ConnectionButton" onclick="doOpenConnection()" value="Connect" type="button">
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Task NAME:</strong></label>
	<input  class="form-control col-sm-6" id="name" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Task Description: </strong></label>
	<input  class="form-control col-sm-6" id="description" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Task Deadline: </strong></label>
	<input type="datetime-local" class="form-control col-sm-6" id="deadline" required>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>Select Required Skills: </strong></label>
	<ul class="list-group card form-control col-sm-6" style="overflow-y:scroll; height:250px;">
		{{#skill}}
		<li class="list-group-item">
			<input type="checkbox" name="skill" value="{{id}}"> <a href="skill?id={{Id}}">{{name}}</a></input>
		</li>
		{{/skill}}
	</ul>
</div>
<div class="form-group row">
	<div class="col-sm-2"></div>
	<button class="btn btn-primary mb-2" onclick="doSendMessage();">Execute</button>
</div>
<div class="form-group row">
	<label class="col-sm-2"><strong>COMMUNICATION LOG</strong></label>
	<textarea id="txtAreaEcho" class="form-control col-sm-6" style="overflow:scroll; height:250px;"></textarea>
</div>

<script src="js/taskRequest.js" type="text/javascript"></script>